<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team3j.dulwichstreetart" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_blob"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:label="@string/title_activity_splash" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".GallerySwipeHolder"
            android:label="@string/title_activity_GallerySwipeHolder" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="team3j.artistdisplay.ArtistDisplayActivity"
            android:label="@string/title_activity_artist_display" >
        </activity>
        <activity
            android:name="team3j.artworkdisplay.FullScreenDisplay"
            android:label="@string/title_activity_full_screen_display" >
        </activity>
    </application>

</manifest>
