<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/white">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_visited"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/superlightgrey"
        android:layout_below="@+id/visited_options"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="5dp"
        android:id ="@+id/visited_options"
        android:gravity="center">

        <Button
            android:id="@+id/info_button_visited"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="@color/white"
            android:background="@color/colorHighlight"
            android:text="Information"/>

        <Button
            android:id="@+id/reset_button_visited"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:background="@color/colorHighlight"
            android:text="Reset"/>
    </LinearLayout>


</RelativeLayout>
