<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/panel_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"

    android:clickable="true"
    android:descendantFocusability="blocksDescendants">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        card_view:cardBackgroundColor="@color/colorDivider"
        card_view:cardCornerRadius="5dp"
        card_view:cardPreventCornerOverlap="false"
        android:background="@color/colorPrimary"
        android:id="@+id/card_view_1_large_image"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <com.etsy.android.grid.util.DynamicHeightImageView
                android:id="@+id/dynamic_imageView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_blob"
                android:layout_centerInParent="true"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"

                android:paddingBottom="2dp"
                />

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/description_textview"
                android:paddingBottom="1dp"
                android:drawableTop="@color/grey"
                android:layout_margin="1dp"
                android:layout_marginLeft="3dp"
                android:autoText="false"
                android:text="@string/art_description"
                android:textSize="9dp"

                />

            <LinearLayout android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:id="@+id/separator"
                    android:visibility="visible"
                    android:background="@color/grey"/>


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/txt_line1"
                    android:paddingTop="4dp"
                    android:paddingBottom="1dp"
                    android:drawableTop="@color/grey"
                    android:layout_margin="1dp"
                    android:layout_marginLeft="3dp"
                    android:autoText="false"
                    android:text="@string/title_activity_main"
                    android:textSize="11dp"
                    />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>