<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="2dp"

        android:id="@+id/card_view_1_welcome1"
        android:animateLayoutChanges="true"

        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp">


        <TextView android:text="Hello World" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_visited_item"
            android:layout_alignParentLeft="true"
            android:padding="15dp"/>

        <TextView android:text="Visited" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visitedQuestion_textView"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingLeft="15dp"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:paddingRight="20dp"/>

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginRight="3dp"
            android:layout_gravity="right"
            android:src="@android:drawable/arrow_down_float"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:background="@android:color/transparent"
            android:visibility="gone"
            android:id="@+id/expand_area"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/image_area"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="35dp"
                android:paddingLeft="15dp"/>
            <!--android:src="@drawable/ic_launcher"-->
            <!--android:layout_below="@+id/textview_visited_item"                -->
            <!--android:layout_above="@+id/visitedQuestion_textView"-->
            <!--android:layout_alignRight="@+id/visitedQuestion_textView"/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="art info"
                android:id="@+id/art_info_area"
                android:layout_toRightOf="@+id/image_area"
                android:paddingLeft="15dp"
                android:layout_marginTop="35dp"/>
            <!--android:layout_alignBaseline="@+id/map_link_button"-->
            <!--android:layout_alignBottom="@+id/address_info_area"-->

            <!--<LinearLayout-->
            <!--android:orientation="vertical"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:id="@+id/sub_button_area"-->
            <!--android:layout_gravity="right">-->

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map Button"
                android:id="@+id/map_link_button"
                android:layout_alignParentRight="true"
                android:layout_marginTop="35dp"
                android:paddingRight="15dp"/>
            <!--android:layout_toEndOf="@+id/art_info_area"-->
            <!--android:layout_toRightOf="@+id/art_info_area"/>-->
            <!--android:layout_below="@+id/visitedQuestion_textView"/>-->


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gallery Button"
                android:id="@+id/gallery_link_button"
                android:layout_below="@+id/map_link_button"
                android:layout_alignParentRight="true"
                android:layout_alignLeft="@+id/map_link_button"
                android:paddingRight="15dp"/>

            <!--</LinearLayout>-->


            <!--<LinearLayout-->
            <!--android:orientation="horizontal"-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@android:color/transparent"-->
            <!--android:id="@+id/sub_text_area"-->
            <!--android:layout_gravity="bottom">-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address goes here"
                android:id="@+id/address_info_area"
                android:layout_below="@+id/image_area"
                android:layout_alignParentBottom="true"/>

            <!--</LinearLayout>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>