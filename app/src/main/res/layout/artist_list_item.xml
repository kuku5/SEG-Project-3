<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:divider="@color/colorPrimaryLight"
    android:dividerPadding="10dp"
    android:background="@color/white"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"



        >
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:id="@+id/separator"
            android:visibility="visible"
            android:background="@color/grey"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_title"
        android:textSize="13dp"
        android:layout_gravity="center_vertical" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_title1"
            android:text="@string/total_works"
            android:textSize="10dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_title2"
            android:text="@string/total_favourites"
            android:textSize="10dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_title3"
            android:text="@string/total_visits"
            android:textSize="10dp"
            android:layout_gravity="center_vertical" />
</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@color/colorPrimaryLight"
        android:dividerPadding="10dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:clickable="true">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/list_item_number"
        android:padding="8dp"
        android:layout_gravity="center_vertical" />

        <!--<ImageView-->
            <!--android:layout_width="50dp"-->
            <!--android:layout_height="50dp"-->
            <!--android:id="@+id/imageView2"-->
            <!--android:src="@drawable/stiksmall"/>-->


    </LinearLayout>

    </LinearLayout>
