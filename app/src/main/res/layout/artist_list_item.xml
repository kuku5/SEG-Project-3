<?xml version="1.0" encoding="utf-8"?>





<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <View
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/separator"
        android:visibility="visible"
        android:background="@color/colorAccentReal"/>


    <RelativeLayout
        android:id="@+id/shareButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/white"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="vertical"
            android:layout_centerVertical="true">

            <TextView

                android:id="@+id/artist_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="12dp"
                android:textAllCaps="true"
                android:textColor="@color/colorAccentReal"
                android:textSize="16sp"
                android:textStyle="bold"

                android:text="@string/artisttitle"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <!--<ImageView-->
            <!--android:id="@+id/shareIcon"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:src="@drawable/ic_share" />-->
        </LinearLayout>

    </RelativeLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="0dp"
        card_view:cardPreventCornerOverlap="false"
        android:id="@+id/artist_list_item_card"
        android:layout_margin="12dp"
        android:visibility="gone"

        android:animateLayoutChanges="true">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/artist_list_item_relative">


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/artisttitle_info"
                android:textColor="@color/artist_text_grey"
                android:textStyle="bold"
                android:textSize="16sp"

                />


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/artisttile"
                android:textColor="@color/artist_text_grey"
                android:textStyle="bold"
                android:textSize="13sp"

                android:id="@+id/artist_list_item_desc"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>