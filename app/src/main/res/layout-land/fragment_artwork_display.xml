<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/superlightgrey">




    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/superlightgrey"
        android:animateLayoutChanges="true"
        android:id="@+id/scroll_view_toscroll"
        >




        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"

            android:background="@color/superlightgrey"

            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/superlightgrey"

                android:padding="0dp"
                android:animateLayoutChanges="true"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:padding="16dp"
                    >

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="@string/hello_world"
                        android:textAllCaps="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:id="@+id/position"
                        android:layout_gravity="center|left"
                        android:maxLines="1"
                        android:layout_weight="0.8" />

                </LinearLayout>


                <LinearLayout android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="3dp">
                    <android.support.v7.widget.CardView
                        android:id="@+id/artwork_display_cardview_image"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="0dp"
                        >


                <com.etsy.android.grid.util.DynamicHeightImageView
                        android:id="@+id/dynamic_imageview_artwork_display"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/thevirginoftherosary"
                        android:layout_centerInParent="true"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"
                        android:background="@color/superlightgrey"

                        android:layout_marginBottom="0dp"

                       />
                </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/artwork_display_cardview1"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center"

                        android:layout_margin="5dp"
                        card_view:cardBackgroundColor="@android:color/white"
                        card_view:cardCornerRadius="0dp"
                        >


                <LinearLayout android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/artwork_display_cardview1_title"
                        android:paddingTop="8dp"
                        android:paddingBottom="3dp"
                        android:drawableTop="@color/colorAccent"
                        android:layout_margin="1dp"
                        android:layout_marginLeft="3dp"
                        android:autoText="false"
                        android:text="@string/description_title"
                        android:textSize="14sp"
                        />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:id="@+id/separator"
                        android:background="@color/grey"/>

                    <TextView

                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/description_textview"
                        android:paddingBottom="10dp"
                        android:layout_margin="1dp"
                        android:layout_marginLeft="3dp"
                        android:text="@string/art_description"
                        android:textSize="9sp"

                        />
                </LinearLayout>
                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <!--</android.support.v7.widget.CardView>-->
                <!--<View-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="100dp"-->
                <!--android:id="@+id/title_view"-->
                <!--android:background="@color/white"-->
                <!---->
                <!--/>-->
            </LinearLayout>




            <android.support.v7.widget.CardView
                android:id="@+id/artwork_display_cardview3"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="1000dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="0dp"
                >




                <LinearLayout android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="3dp">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/recycler_view_grid1"
                        android:padding="4dp"
                        >


                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/artwork_display_cardview2"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                card_view:cardBackgroundColor="@android:color/white"
                card_view:cardCornerRadius="0dp"
                >




                <LinearLayout android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:padding="3dp">


                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/artwork_display_cardview2_title"
                        android:paddingTop="8dp"
                        android:paddingBottom="3dp"
                        android:drawableTop="@color/colorAccent"
                        android:layout_margin="1dp"
                        android:layout_marginLeft="3dp"
                        android:autoText="false"
                        android:text="Comments"
                        android:textSize="14sp"

                        />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:id="@+id/separator1"
                        android:background="@color/grey"/>

                    <com.etsy.android.grid.util.DynamicHeightImageView
                        android:id="@+id/example_comments"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/example_comments"
                        android:layout_centerInParent="true"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"
                        android:background="@color/white"


                        android:layout_marginBottom="4dp"

                        />

                    <!--<TextView-->

                        <!--android:layout_width="fill_parent"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:id="@+id/description_textview1"-->
                        <!--android:paddingBottom="10dp"-->
                        <!--android:layout_margin="1dp"-->
                        <!--android:layout_marginLeft="3dp"-->
                        <!--android:text="@string/art_description"-->
                        <!--android:textSize="9sp"-->

                        <!--/>-->





                </LinearLayout>
            </android.support.v7.widget.CardView>




        </LinearLayout>
    </ScrollView>

</LinearLayout>